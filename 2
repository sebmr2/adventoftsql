SELECT a,b,c,d,e,f,g,h
FROM (
	SELECT a,b,c,d,e,f,g,h
	FROM #input
	WHERE a<b AND b<C AND c<d AND d<E AND e<F AND f<g AND g<h
	UNION ALL
	SELECT a,b,c,d,e,f,g,h
	FROM #input
	WHERE a>b AND b>C AND c>d AND d>E AND e>F AND f>g AND g>h
) incdec
WHERE ABS(a-b) BETWEEN 1 AND 3
	AND ABS(b-c) BETWEEN 1 AND 3
	AND ABS(c-d) BETWEEN 1 AND 3
	AND ABS(d-e) BETWEEN 1 AND 3
	AND ABS(e-f) BETWEEN 1 AND 3
	AND ABS(f-g) BETWEEN 1 AND 3
	AND ABS(g-h) BETWEEN 1 AND 3
